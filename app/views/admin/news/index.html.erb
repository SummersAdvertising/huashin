<!--top-out-->
<div id="container">
   <div class="editArea">
      <div id="side" class="left">
            <ul>
              <li><a href="/admin/questions" target="_self" id="message">留言管理</a></li>
              <li><a href="/admin/news" target="_self" id="news" class="active">最新消息</a></li>
              <li><a href="/admin/orderproducts" target="_self" id="product">商品管理</a></li>
              <li><a href="/admin/orders" id="order">訂單管理</a></li>
            </ul>
          </div>
      <!--side-->
      <div id="main" class="right">
        <div class="button"><%= link_to image_tag("/images/add.png")+'新增消息', admin_news_index_path, :method => :post %></div>
        <div class="main-list">
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr class="main-list-title">
              <th width="17%" align="center" scope="col">日期</th>
              <th width="63%" align="left" scope="col">標題</th>
              <th width="9%" align="center" scope="col">編輯</th>
              <th width="9%" align="center" scope="col">刪除</th>
            </tr>
            <% @news.each do |news| %>
            <tr>
              <td align="center"><%= news.created_at.strftime("%Y/%m/%d") %></td>
              <td align="left"><%= link_to 'Show', admin_news_path(news) %></td>
              <td align="center"><%= link_to image_tag("/images/edit.png"), edit_admin_news_path(news) %></td>
              <td align="center"><%= link_to image_tag("/images/delete.png"), admin_news_path(news), method: :delete, data: { confirm: '確定刪除消息?' } %></td>
            </tr>
            <% end %>
          </table>
        </div>
      
      <div class="page_box">
                <div class="newsPage">
                    <ul>
                        <a href="#"><li class="pre"> </li></a>
                        <a href="#"><li class="press">1</li></a>
                        <a href="#"><li>2</li></a>
                        <a href="#"><li>3</li></a>
                      <a href="#"><li class="next"> </li></a>
                    </ul>
                </div>
        </div>
      <div class="info">按鈕說明：<img src="/images/edit.png" align="center"/>編輯　|　<img src="/images/delete.png" align="center"/>刪除</div>  
        
     </div>
      <!--main--> 
   </div>
</div>
<!--container-->
<div id="footer"></div>
<!--footer-->