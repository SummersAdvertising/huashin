<!--top-out-->
<div id="container">
   <div class="editArea">
      <div id="side" class="left">
            <ul>
              <li><a href="/admin/questions" target="_self" id="message">留言管理</a></li>
              <li><a href="/admin/news" target="_self" id="news">最新消息</a></li>
              <li><a href="/admin/orderproducts" target="_self" id="product" class="active">商品管理</a></li>
              <li><a href="/admin/orders" id="order">訂單管理</a></li>
            </ul>
          </div>
      <!--side-->
      <div id="main" class="right">
        <div class="button"><%= link_to image_tag("/images/add.png")+'新增產品', new_admin_orderproduct_path %></div>
        <div class="main-list">
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr class="main-list-title">
              <th width="15%" align="center" scope="col">上架日期</th>
              <th width="13%" align="center" scope="col">前台顯示</th>
              
              <th align="left" scope="col">產品名稱</th>
              <th width="8%" align="center" scope="col">售價</th>
              <th width="15%" align="center" scope="col">單顆重量</th>
              <th width="9%" align="center" scope="col">每箱數量</th>
              <th width="7%" align="center" scope="col">編輯</th>
              <th width="7%" align="center" scope="col">刪除</th>
            </tr> 
            <% @orderproducts.each do |orderproduct| %>
            <% if(!orderproduct.admindelete) %>
            <tr>
              <td align="center"><%= (orderproduct.addDate) || "尚未指定" %></td>
              <td align="center"><img src= <%= orderproduct.frontshow == "1" ? "/images/check.png" : "/images/cancel.png" %> /></td>
              <td align="left"><%= link_to orderproduct.name, edit_admin_orderproduct_path(orderproduct) %></td>
              <td align="center">$<%= orderproduct.price %></td>
              <td align="center"><%= orderproduct.weight %></td>
              <td align="center"><%= orderproduct.amountperbox %>個</td>
              <td align="center"><%= link_to image_tag("/images/edit.png"), edit_admin_orderproduct_path(orderproduct) %></td>
              <td align="center"><%= link_to image_tag("/images/delete.png"), admin_orderproduct_path(orderproduct), method: :delete, data: { confirm: '確定要刪除這項商品?' } %></td>
            </tr>
            <% end %>
            <% end %>

          </table>
        </div>
      
      <%= paginate @orderproducts, :theme => 'kaminari_theme' %>
      <div class="info">按鈕說明：<img src="/images/edit.png" align="center"/>編輯　|　<img src="/images/delete.png" align="center"/>刪除</div>  
        
     </div>
      <!--main--> 
   </div>
</div>
<!--container-->
<div id="footer"></div>
<!--footer-->