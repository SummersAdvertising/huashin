
  <div class="field">
    <%= f.label :addDate, '上架日期' %><br />
    <%= f.text_field :addDate, :autocomplete => "off" %>
  </div>
  <div class="field">
    <%= f.check_box :frontshow %><%= f.label '顯示在前台' %>
    
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :autocomplete => "off" %>
  </div>
  <div class="field">
    <%= select( "orderproduct", "fruitType", { "請選擇商品分類" =>"0", "梨" => "1", "柿子/水蜜桃" => "2"}) %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :weight, '單顆重量' %><br />
    <%= f.text_field :weight, :autocomplete => "off" %>
  </div>
  <div class="field">
    <%= f.label :amountperbox, '每盒幾個' %><br />
    <%= f.text_field :amountperbox, :autocomplete => "off" %>
  </div>
  <div class="field">
    <% if(@orderproduct.image.path) %>
    <%= image_tag(@orderproduct.image_url(:thumb)) %>
    <%else%>
    <p>尚未上傳商品封面圖片</p>
    <% end %>
    <%= f.label :image,'封面' %><br />
    <%= f.file_field :image %>
  </div>
  <div id="error"></div>
  <div class="actions">
    <%= f.submit %>
  </div>

<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />
<script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
<script>
  $(document).ready(function(){
     $( "#orderproduct_addDate" ).datepicker();
     $( "#orderproduct_addDate" ).change(function(){
      $(this).datepicker("option", "dateFormat", "yy-mm-dd");
     });

     $("form").submit(function(){
      $("#error").html("");
      var submit = true;

      $("form input:not(input[type = file])").not("#orderproduct_addDate").each(function(){
        if(!$(this).val()){
          submit = false;
          $("#error").append("<p>" + $("label[for='"+$(this).attr('id')+"']").html() + "不能為空</p>");
        }
        if($(this).attr('id')=="orderproduct_price" && parseInt($(this).val())<=0){
          submit = false;
          $("#error").append("<p>商品價格必須是正整數</p>");
        }
      });

      if($("#orderproduct_fruitType").val() == "0"){
        submit = false;
        $("#error").append("<p>請選擇商品分類</p>");
      }

      return formvalidate() && submit;
     });

     function formvalidate(){
      //validate image upload
      var isPass = false; 
      var alert;

      var fileinput = document.getElementById('orderproduct_image');
      if(fileinput.files[0]){
        var typeAllowed = ["gif", "png", "jpg", "jpeg"];

        (function() {
          outerloop:
          for(var item in typeAllowed){
            if(fileinput.files[0].type.indexOf(typeAllowed[item]) != -1){
              isPass = true;
              break outerloop;
            }
          }
        })();

        alert = isPass? null : "<p>只能上傳 .gif, .png, .jpg 圖片檔</p>";

        if(fileinput.files[0].size > 2 * 1024 *1024){
          isPass = false;
          alert += "<p>檔案大小必須小於2MB</p>";
        }
        if(!isPass){
          $("#error").append(alert);
          $(fileinput).val(""); 
          return false;
        }
      }
      return true;
     }
   });
</script>

