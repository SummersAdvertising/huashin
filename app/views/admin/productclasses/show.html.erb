<p id="notice">
  <%= notice %></p>

<p>
  <%= @productclass.name %>
  <%= link_to '修改分類名稱', edit_admin_productclass_path(@productclass) %></p>
<p>
  <%= link_to "新增商品", admin_productclass_products_path(params[:id]), :method => :post %></p>

<% if(@productclass.products.size > 0) %>
<table>
  <tr>
    <th>上架日期</th>
    <th>顯示在前台</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
  
  <tr>
    <td>
      <%= (product.addDate) || "未指定" %></td>
      <td>
      <%= (product.frontshow) ? "是" : "" %></td>
    <td>
      <%= product.name %></td>
    <td>
      <%= link_to 'Show', admin_productclass_product_path(@productclass, product) %></td>
    <td>
      <%= link_to 'Edit', edit_admin_productclass_product_path(@productclass, product) %></td>
    <td>
      <%= link_to 'Destroy', admin_productclass_product_path(@productclass, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>

<br />
<% else %>
<p>此分類下沒有商品</p>
<% end %>

<%= link_to 'Back', admin_productclasses_path %>